/*
	Yellow: #faa916
			#7C550B
	White: 	#EFF4F3
	Gray: 	#464347
	Black: 	#1b1b1e
	Red: 	#96031a

*/

body
{
	background:		#1B1B1E;
	cursor:			default;
	font-family:	Martel Sans;
	margin:			0;
	padding:		0;

	-webkit-touch-callout: 	none;
    -webkit-user-select: 	none;
    -khtml-user-select: 	none;
    -moz-user-select: 		none;
    -ms-user-select: 		none;
    user-select: 			none;
}

#drawCanvas{
	border:		solid 2px #333;
	position:	absolute;
	left:		380px;
	top:		200px;
}

h1, h2, h3, h4, h5, h6{
	margin:		0;
	padding:	0;
}

h1{
	font-family:	Bangers;
	color:			#faa916;
	padding:		0;
	margin:			0;
	text-align:		center;
	font-size:		60px;
	text-shadow:	1px 1px #7C550B, 2px 2px #7C550B;
}

#topBar{
	background:	#96031a;
	height:		60px;
	width:		100%;
	box-shadow:	0px 4px 0px #680615;
}

#appContainer{
	position:	absolute;
	left:		50%;
	transform:	translateX(-50%);
	top:		100px;
}

#canvas{
	position:	absolute;
	top:		100px;
	left:		calc(50% - 400px);
	border:		solid 2px #3F3B3F;
	background:	#fff;
	box-shadow:	1px 1px 0px #3F3B3F, 2px 2px 0px #3F3B3F, 3px 3px 0px #3F3B3F, 4px 4px 0px #3F3B3F;
	cursor:		none;
}

#settingsPanel{
	position:	absolute;
	height:		300px;
	width:		200px;
	background:	#fff;

	right:	450px;
	top:	31px;
}

.box{
	border:		solid 2px #3F3B3F;
	background:	#fff;
	box-shadow:	1px 1px 0px #3F3B3F, 2px 2px 0px #3F3B3F, 3px 3px 0px #3F3B3F, 4px 4px 0px #3F3B3F;
}

#settingsTop{
	background:	#96031a;
	height: 	25px;
	width:		202px;
	position:	absolute;
	border:		solid 2px #96031a;
	right:		450px;
	box-shadow:	1px 1px 0px #680615, 2px 2px 0px #680615, 3px 3px 0px #680615, 4px 4px 0px #680615, 5px 5px 0px #680615, 6px 6px 0px #680615;

	/*, 2px 2px 0px #680615, 3px 3px 0px #680615, 4px 4px 0px #680615, 5px 5px 0px #680615;*/
}

#settingsPanel:before{
	content:"";
	background:#fff;
	position:absolute;
	height:2px;
	top:-2px;
	width:100%;
}

.topDesc{
	font-family:Martel Sans;
	color:#fff;
	font-size:18px;
	line-height:27px;
	margin-left:10px;
	text-align:center;
}

.desc{
	margin:0;
	padding:0;
	font-weight:300;
	font-size:16px;
	color:#555;
	text-align:center;
	margin-bottom:0px;
	margin-top:10px;
}

.settingButton{
	background:#eee;
	box-shadow:1px 1px 0px #ccc, 2px 2px 0px #ccc;
	height:21px;
	width:21px;
	display:inline-block;
	margin-right:6.8px;
	margin-top:3px;
}

.settingButton.current{
	box-shadow:0px 0px 0px 1px #ccc;
	left:1px;
	top:1px;
	position:relative;
	margin-right:6.8px;
}

.settingButton:nth-of-type(6){
	margin-right:0 !important;
}

.settingButton:nth-of-type(12){
	margin-right:0 !important;
}

.settingButton:nth-of-type(18){
	margin-right:0 !important;
}

.settingButton:nth-of-type(24){
	margin-right:0 !important;
}

#settingsPanel .wrapper{
	height:100%;
	width:calc(100% - 20px);
	margin:8px;
	margin-right:0px;
	position:relative;
}

input[type="range"]{
	-webkit-appearance:none !important;
	background:#eee;
	height:3px;
	width:100%;
}

input[type="range"]::-webkit-slider-thumb{
	-webkit-appearance:none !important;  
	background:#96031a;
	height:20px;
	width:8px;
}

input[type="range"]:focus{
	-webkit-appearance:none !important;
	outline:none;
}

#preview{
	margin-top:10px;
	position:relative;
	left:50%;
	transform: translateX(-50%);
	border-radius:1000px;
	
	background:#000;

	height:6px;
	width:6px;

	box-shadow:1px 1px 2px 1px #333;
	box-shadow:1px 1px 2px 1px rgba(0,0,0,0.3);
}

#cursor{
	position:absolute;
	border-radius:1000px;
	height:6px;
	width:6px;
	transform:translate(-50%,-50%);
	background:#000;
	pointer-events:none;
	box-shadow:1px 1px 2px 1px #333;
	box-shadow:1px 1px 2px 1px rgba(0,0,0,0.3);
	display:none;
}

#canvasTop{
	background:#96031a;
	height: 25px;
	width:802px;
	position:absolute;
	border:solid 2px #96031a;
	right:450px;
	box-shadow:1px 1px 0px #680615, 2px 2px 0px #680615, 3px 3px 0px #680615, 4px 4px 0px #680615, 5px 5px 0px #680615, 6px 6px 0px #680615;
	left:50%;
	top:100px;
	transform:translateX(-50%);
}